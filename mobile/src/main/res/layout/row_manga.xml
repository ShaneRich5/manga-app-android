<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/mangaThumbnail"
        android:layout_width="54dp"
        android:layout_height="80dp"
        android:layout_centerVertical="true"
        android:contentDescription="@string/manga_description"/>

    <TextView
        android:id="@+id/mangaTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@id/mangaThumbnail"
        android:layout_marginLeft="56dp"
        android:layout_marginStart="56dp"
        android:alpha="0.87"
        android:gravity="end"
        android:padding="4dp"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/mangaLastUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/mangaTitle"
        android:alpha="0.87"
        android:padding="4dp"
        android:textSize="14sp"/>

    <RatingBar
        android:id="@+id/mangaScore"
        style="@android:style/Widget.Holo.RatingBar.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/mangaLastUpdate"
        android:isIndicator="true"
        android:max="5"
        android:numStars="0" />

</RelativeLayout>